{
  "version": 2,
  "functions": {
    "main.py": {
      "runtime": "python3.11",
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "/main.py"
    }
  ],
  "env": {
    "DATABASE_URL": "@DATABASE_URL",
    "SECRET_KEY": "@SECRET_KEY",
    "ALGORITHM": "@ALGORITHM",
    "ACCESS_TOKEN_EXPIRE_MINUTES": "@ACCESS_TOKEN_EXPIRE_MINUTES",
    "ALLOWED_ORIGINS": "@ALLOWED_ORIGINS",
    "UPLOAD_DIR": "@UPLOAD_DIR"
  },
  "builds": [
    { "src": "main.py", "use": "@vercel/python" }
  ]
}
